@model EntityLayer.Concrete.Mail

<div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch ">
  
    @using (Html.BeginForm("SendMessage", "Default", FormMethod.Post))
    {
   
        @Html.AntiForgeryToken()
            <div class="row ">
            <div class="form-group col-md-6">
                <label for="name">Adınız ve Soyadınız</label>
                <input type="text" asp-for="NameandSurname" class="form-control" required>
                <span asp-validation-for="NameandSurname" class="text-danger"></span>
            </div>
                <div class="form-group col-md-6">
                <label for="email">Emailiniz</label>
                <input type="email" asp-for="Email" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group ">
            <label for="subject">Başlık</label>
            <input type="text" asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label for="message">Mesaj</label>
            <textarea asp-for="Message" class="form-control" rows="10" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="text-center"> <button type="submit" class="btn btn-primary">Mesaj Gönder</button> </div>
         
    }
  
</div>
<script src="~/iPortfolio/assets/vendor/php-email-form/validate.js"></script>